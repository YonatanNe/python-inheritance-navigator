{
  "name": "python-inheritance-navigator",
  "displayName": "Python Inheritance Navigator",
  "description": "Navigate Python method inheritance with Go to Base Method and Go to Overrides commands",
  "version": "0.1.19",
  "publisher": "YonatanNethanel",
  "repository": {
    "type": "git",
    "url": "https://github.com/YonatanNe/python-inheritance-navigator.git"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pythonInheritance.goToBase",
        "title": "Go to Base Method"
      },
      {
        "command": "pythonInheritance.goToOverrides",
        "title": "Go to Overrides"
      },
      {
        "command": "pythonInheritance.refreshIndex",
        "title": "Refresh Inheritance Index"
      },
      {
        "command": "pythonInheritance.cleanAndReindex",
        "title": "Clean and Reindex"
      },
      {
        "command": "pythonInheritance.openIndexFile",
        "title": "Open Index File"
      },
      {
        "command": "pythonInheritance.clearAllIndexes",
        "title": "Clear All Indexes"
      },
      {
        "command": "pythonInheritance.navigateToLocation",
        "title": "Navigate to Location"
      }
    ],
    "configuration": {
      "title": "Python Inheritance Navigator",
      "properties": {
        "pythonInheritance.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens links for method inheritance navigation"
        },
        "pythonInheritance.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover preview showing code snippets for base methods, overrides, and inheritance relationships"
        },
        "pythonInheritance.showBaseMethods": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Go to Base' links for overridden methods"
        },
        "pythonInheritance.showOverrides": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Go to Overrides' links for methods with overrides"
        },
        "pythonInheritance.indexingScope": {
          "type": "string",
          "enum": [
            "workspace",
            "openFiles"
          ],
          "default": "workspace",
          "description": "Scope of files to index for inheritance analysis"
        },
        "pythonInheritance.saveLogToFile": {
          "type": "boolean",
          "default": false,
          "description": "Save log messages to a file (.vscode/python-inheritance-navigator.log)"
        },
        "pythonInheritance.showOutputChannel": {
          "type": "boolean",
          "default": false,
          "description": "Show extension output in the Output panel"
        },
        "pythonInheritance.skipFoldersWithMultipleGitRepos": {
          "type": "boolean",
          "default": true,
          "description": "Skip indexing folders that contain more than one Git repository (not recommended to disable)"
        },
        "pythonInheritance.fileChangeDebounceMs": {
          "type": "number",
          "default": 3000,
          "description": "Debounce delay in milliseconds for file change events"
        },
        "pythonInheritance.maxConcurrentAnalyses": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of concurrent Python analysis processes"
        },
        "pythonInheritance.filesPerBatch": {
          "type": "number",
          "default": 50,
          "description": "Number of files to process per batch"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run compile:test && npm run lint",
    "compile:test": "tsc -p ./tsconfig.test.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "node ./out/test/suite/index.js",
    "dev": "npm run compile && code --extensionDevelopmentPath=$PWD",
    "dev:script": "./scripts/launch-dev.sh"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4"
  }
}
